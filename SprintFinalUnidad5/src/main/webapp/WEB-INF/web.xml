<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">
	<!-- Display name of the application -->
	<display-name>SprintFinalUnidad5</display-name>
	<!-- Servlet Declarations -->
	<servlet>
		<servlet-name>ActualizarUsuario</servlet-name>
		<servlet-class>sprintfinalm5.controlador.ActualizarUsuario</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Contacto</servlet-name>
		<servlet-class>sprintfinalm5.controlador.Contacto</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CrearCapacitacion</servlet-name>
		<servlet-class>sprintfinalm5.controlador.CrearCapacitacion</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CrearUsuario</servlet-name>
		<servlet-class>sprintfinalm5.controlador.CrearUsuario</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Inicio</servlet-name>
		<servlet-class>sprintfinalm5.controlador.Inicio</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListarCapacitaciones</servlet-name>
		<servlet-class>sprintfinalm5.controlador.ListarCapacitaciones</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>ListarUsuarios</servlet-name>
		<servlet-class>sprintfinalm5.controlador.ListarUsuarios</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>sprintfinalm5.controlador.Login</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>sprintfinalm5.controlador.Logout</servlet-class>
	</servlet>
	
	<!-- Servlet Mappings -->
	<servlet-mapping>
		<servlet-name>ActualizarUsuario</servlet-name>
		<url-pattern>/actualizarUsuario</url-pattern>
	</servlet-mapping>
	
	<!-- servlet-mapping>
		<servlet-name>Contacto</servlet-name>
		<url-pattern>/contacto</url-pattern>
	</servlet-mapping-->
	
	<servlet-mapping>
		<servlet-name>CrearCapacitacion</servlet-name>
		<url-pattern>/crearCapacitacion</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CrearUsuario</servlet-name>
		<url-pattern>/crearUsuario</url-pattern>
	</servlet-mapping>
		
	<!-- servlet-mapping>
		<servlet-name>Inicio</servlet-name>
		<url-pattern>/inicio</url-pattern>
	</servlet-mapping-->
	
	<servlet-mapping>
		<servlet-name>ListarCapacitaciones</servlet-name>
		<url-pattern>/listarCapacitaciones</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListarUsuarios</servlet-name>
		<url-pattern>/listarUsuarios</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping-->
	
	<!-- Default servlet mapping for static resources -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<!-- MIME type for CSS -->
	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css</mime-type>
	</mime-mapping>
	<!-- Welcome file list -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>inicio.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>